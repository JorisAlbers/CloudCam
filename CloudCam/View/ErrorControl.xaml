<reactiveUi:ReactiveUserControl x:TypeArguments="cloudCam:ErrorViewModel" x:Class="CloudCam.View.ErrorControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:CloudCam.View"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:cloudCam="clr-namespace:CloudCam"
                                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" LastChildFill="False"
               Background="White">
            <TextBlock x:Name="ErrorTextBlock"
                       DockPanel.Dock="Left"
                       Foreground="Red"
                       FontSize="24"/>

            <materialDesign:PackIcon DockPanel.Dock="Left" HorizontalAlignment="Right" VerticalAlignment="Center" Height="50" Width="50" Kind="Error" Foreground="Red" />

    </DockPanel>
</reactiveUi:ReactiveUserControl>
